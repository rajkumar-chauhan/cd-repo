
    pipeline {
        agent any

        tools {
            terraform 'Terraform'
        }

        parameters {
            choice(name: 'ACTION', choices: ['apply', 'destroy'], description: 'Choose Terraform action to perform')
        }

        environment {
             AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
             AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
             GITHUB_TOKEN = credentials('token')
        }

        stages {
            stage('Checkout') {
                steps {
                    git url: 'https://github.com/rajkumar-chauhan/cred.git',
                        branch: 'main',
                        credentialsId: 'token'
                }
            }

            stage('Terraform Init') {
                steps {
                    sh 'terraform init'
                }
            }

            stage('Terraform Plan') {
                steps {
                    sh 'terraform plan -out=tfplan'
                }
            }

            stage('Terraform Apply or Destroy') {
                steps {
                    script {
                        if (params.ACTION == 'apply') {
                            input 'Apply Terraform changes?'
                            sh 'terraform apply -auto-approve tfplan'
                        } else if (params.ACTION == 'destroy') {
                            input 'Destroy Terraform infrastructure?'
                            sh 'terraform destroy -auto-approve'
                        }
                    }
                }
            }
        }

        post {
            always {
                cleanWs()
            }
        }
    }
